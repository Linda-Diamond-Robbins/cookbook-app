<h1>All recipes</h1>
<% @recipes.each_slice(3) do |three_recipes| %>
  <div class="row">
    <% three_recipes.each do |recipe| %>
      <div class="col-md-4">
        <div class="well">
          <h2><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></h2>
          <h2>Chef: <%= recipe.chef %></h2>
          <p>Prep time: <%= recipe.friendly_prep_time %></p>
          <p>Created at: <%= recipe.friendly_created_at  %></p>
          <img src="<%= recipe.image %>" alt="">
          <h4>Ingredients:</h4>
          <ul>
            <% recipe.ingredients_list.each do |ingredient| %>
              <li><%= ingredient %></li>
            <% end %>
          </ul>
          <p>Directions: <%= recipe.directions %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>